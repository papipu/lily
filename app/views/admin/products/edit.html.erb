<% form_for @product, :html => { :multipart => true }, :url => { :action => "update" } do |f| %>
  <p><%= f.error_messages %></p>
  <p>
    <label for="title">заголовок</label>
    <%= f.text_field :title %>
  </p>
  <p>
    <label for="price">цена</label>
    <%= f.text_field :price %>
  </p>
  <p>
    <label for="complect_id">комплект</label>
    <%= f.select :complect_id, @product_complects,:selected => @product.complect_id.to_i %>
  </p>
  <p>
    <label for="composition">состав ткани</label>
    <%= f.text_field :composition %>
  </p>
  <p>
    <label for="first_color">основной цвет</label>
    <%= f.text_field :first_color %>
  </p>
  <p>
    <label for="second_color">цвет отделки</label>
    <%= f.text_field :second_color %>
  </p>
  <p>
    <label for="size">размер, см [высота x ширина]</label>
    <%= f.text_field :size %>
  </p>
  <p><%= f.submit 'изменить' %></p>
<% end %>