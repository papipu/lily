<% form_for @setting, :url => { :action => "create" } do |f| %>
  <p><%= f.error_messages %></p>
  <p>
    <label for="name">название (латинскими)</label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label for="name">заголовок</label>
    <%= f.text_field :title %>
  </p>
  <p>
    <label for="value">значение</label>
    <%= f.text_field :value %>
  </p>
  <p><%= f.submit 'добавить' %></p>
<% end %>