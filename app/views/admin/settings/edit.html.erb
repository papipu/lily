<% form_for @setting, :url => { :action => "update" } do |f| %>

  <% if @current_user.group!='2' %>

    <p><%= f.error_messages %></p>
    <p>
      <label for="value"><%= @setting.title %></label>
      <%= f.text_field :value %>
    </p>
    <p><%= f.submit 'изменить' %></p>

  <% else %>

    <p><%= f.error_messages %></p>
    <p>
      <label for="name">название (латинскими)</label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="title">заголовок</label>
      <%= f.text_field :title %>
    </p>
    <p>
      <label for="value">значение</label>
      <%= f.text_field :value %>
    </p>
    <p><%= f.submit 'изменить' %></p>

  <% end %>

<% end %>