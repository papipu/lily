<div id="login_form">
  <% form_tag do %>
  <p>
    <%= label_tag :login, 'логин' %>
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password, 'пароль' %>
    <%= password_field_tag :password, params[:password] %>
    <%= submit_tag "OK" %>
  </p>
   <% end %>
 <%= flash[:notice] %>
</div>
