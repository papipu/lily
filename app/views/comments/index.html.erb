<% if @comments.length>0 then %>
<h1>Книга отзывов</h1>
<div id="comments">
  <% @comments.each do |comment| %>
    <div class="comment">
      <span><%=h comment.name %></span>
      <p><%=h comment.text %></p>
    </div>
  <% end %>
</div>
<% else %>
<h1>Книга отзывов пуста</h1>
<% end %>
<h1>Оставить отзыв</h1>
<div id="comment_form" class="form">
  <% form_for @comment, :url => { :action => "create" } do |f| %>
    <p><%= f.error_messages %></p>
    <p>
      <label for="name">ваше имя</label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="text">комментарий</label>
      <%= f.text_area :text %>
    </p>
    <p><%= f.submit 'отправить' %></p>
  <% end %>
</div>