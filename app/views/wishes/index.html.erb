<% if @wishes.length>0 then %>
<h1>Ваши пожелания</h1>
<div id="comments">
  <% @wishes.each do |wish| %>
    <div class="comment">
      <span><%=h wish.name %></span>
      <p><%=h wish.text %></p>
    </div>
  <% end %>
</div>
<% else %>
<h1>Никто не оставлял пожеланий</h1>
<% end %>
<h1>Оставить пожелание</h1>
<div id="comment_form" class="form">
  <% form_for @wish, :url => { :action => "create" } do |f| %>
    <p><%= f.error_messages %></p>
    <p>
      <label for="name">ваше имя</label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="text">комментарий</label>
      <%= f.text_area :text %>
    </p>
    <p><%= f.submit 'отправить' %></p>
  <% end %>
</div>